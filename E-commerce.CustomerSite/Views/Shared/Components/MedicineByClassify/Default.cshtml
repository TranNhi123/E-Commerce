@model List<E_commerce.CustomerSite.Models.Medicine>
<h3>MEDICINE IN CATEGORY</h3>

<div class=" layout_padding promoted_sectipon">
    <div class="container">
        <h1 class="promoted_text">MEDICINES </h1>
        <div class="images_main">
            <div class="row">
                    @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-6 col-lg-3">
                        <div class="images"><img src="@item.hinh_anh" class="main-image"></div>
                        <button class="promoted_bt">@item.ten_thc</button>
                        <div class="numbar_text">@item.gia_ban VND</div>
                        <button class="mobile_bt"><a asp-area="" asp-page="/Product/Detail" asp-route-id="@item.Id_thc" style="color:#0F0668; text-decoration:none;">Detail</a></button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>